@model TechJobsPersistent.ViewModels.AddJobViewModel;


<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label asp-for="JobName">Job Name</label>
        <input asp-for="JobName" />
        <span asp-validation-for="JobName"></span>
    </div>

   
    <div class="form-group">
        <label asp-for="EmployerId">Employer Location</label>
        <select asp-for="EmployerId" asp-items="Model.AllEmployers" ></select>
        <span asp-validation-for="EmployerId"></span>
    </div>

       
    <input type="submit" value="Add Job" />

    <p>Can't find a specific employer? <a asp-controller="Employer" asp-action="Add">Add one!</a></p>
</form>



